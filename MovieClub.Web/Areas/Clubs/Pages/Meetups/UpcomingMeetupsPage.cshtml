@page "/clubs/{id}/meetups/upcoming"
@model UpcomingMeetupsPage
@{
}
<div class="row mt-4">

    <div class="col-3">
        @*Club Name*@
        <div class="row">
            <div class="col-12 mt-3">
                <a asp-area="Clubs" asp-page="/Details/ClubDetailsPage" asp-route-id="@Model.PageData.ClubId" class="page-nav-title">@Model.PageData!.ClubName</a>
            </div>
        </div>

        <div class="row mt-2">

            <div class="col-6 offset-5 text-center">
                <div class="row mt-2">
                    <div class="col-10 text-end">
                        <a asp-area="Meetups" asp-page="/Create/CreateMeetupPage" class="page-nav-success">Host Meetup</a>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-10 text-end">
                        <a asp-area="Clubs" asp-page="/Meetups/UpcomingMeetupsPage" asp-route-id="@Model.PageData.ClubId" class="page-nav text-end">Upcoming Meetups</a>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-10 text-end">
                        <a asp-area="Clubs" asp-page="/Meetups/PastMeetupsPage" asp-route-id="@Model.PageData.ClubId" class="page-nav text-end">Past Meetups</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-9 mt-3">

        <div class="row mb-3">
            <div class="col-10 offset-1 sub-page-title">Upcoming Meetups:</div>
        </div>

        @*Next Meetup*@
        @if (@Model.PageData.Meetups.Any())
        {
            <div class="sub-page-right">

                <div class="row">
                    <div class="col-3 sub-heading">HOST</div>
                    <div class="col-3 sub-heading">MOVIE</div>
                    <div class="col-3 sub-heading">WHEN</div>
                    <div class="col-2 sub-heading">RSVP</div>

                    <hr />
                </div>

                @foreach (var m in Model.PageData.Meetups)
                {
                    <div class="row mt-4">
                        <div class="col-3">
                            <div class="user-input">@m.Host</div>
                        </div>
                        <div class="col-3">
                            <div class="user-input">@m.Movie.Title</div>
                        </div>
                        <div class="col-3">
                            <div class="user-input">@m.Date</div>
                        </div>
                        <div class="col-2">
                            <div class="user-input">@m.UserAttendance.Status</div>
                        </div>
                        @if (@m.UserAttendance.Status == AttendanceStatus.Hosting)
                        {
                            <div class="col-1 text-center">
                                <a asp-area="Meetups" asp-page="/Edit/EditMeetupPage" asp-route-id="@m.Id" class="page-nav"><i class="fa fa-pencil"></i></a>
                            </div>
                        }
                        else
                        {
                            <div class="col-1 text-center">
                                <a asp-area="Meetups" asp-page="/Details/MeetupDetailsPage" asp-route-id="@m.Id" class="page-nav"><i class="fa fa-id-card"></i></a>
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row text-center">
                <div class="col-6 offset-3 p-4 sub-page-right">
                    <div class="sub-page-title">No Upcoming Meetups</div>
                </div>
            </div>
        }

    </div>

</div>