@page "/clubs/create"
@model CreateClubPage
@{
}

<div class="row">
    <div class="col-6 offset-3 mt-4">

         <div class="sub-page-right">

            <div class="row text-center">
                <div class="sub-page-title">Create Club:</div>
            </div>

            <form method="post">
                <div class="row mt-5">
                    <div class="col-2 sub-heading">
                        <label asp-for="CreateClubModel.Name" class="control-label"></label>
                    </div>

                    <div class="col-6 form-group">
                        <input asp-for="CreateClubModel.Name" class="form-control" />
                        <span asp-validation-for="CreateClubModel.Name" class="text-danger"></span>
                    </div>

                    <div class="col-2 offset-1 text-center form-group">
                        <input asp-page-handler="Create" type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </form>

        </div>

    </div>

</div>