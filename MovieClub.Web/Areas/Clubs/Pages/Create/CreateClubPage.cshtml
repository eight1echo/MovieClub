@page "/clubs/create"
@model CreateClubPage
@{
}

<div class="row">
    <div class="col-6 offset-3 mt-4">

        <div class="row">
            <div class="col-4 page-nav-title text-center">Create Club:</div>
        </div>

         <div class="sub-page-right mt-4">

            <form asp-page-handler="CreateClub" method="post">
                <div class="row mt-2">
                    <div class="col-2 offset-1 sub-heading">Name:</div>

                    <div class="col-5 form-group">
                        <input asp-for="PageData.Name" class="form-control user-input" />
                        <span asp-validation-for="PageData.Name" class="text-danger"></span>
                    </div>

                    <div class="col-2 offset-1 text-center form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </form>

        </div>

    </div>
</div>