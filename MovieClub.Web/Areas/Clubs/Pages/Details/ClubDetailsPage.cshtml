@page "/clubs/details/{id}"
@model ClubDetailsPage
@{

}

@switch (@Model.ClubDetails!.UserMembership.Rank)
{
    case MembershipRank.Visitor:
        <partial name="_VisitorClubDetailsPartial" />
        break;

    case MembershipRank.Pending:
        <partial name="_PendingClubDetailsPartial" />
        break;

    default:
    <div class="row">

        <div class="col-4">
            <div class="row pt-5 text-center">
                <div class="page-title">
                    @Model.ClubDetails.ClubName
                </div>
            </div>

            <div class="row text-center">
                <div class="col-3 mt-3 offset-3">
                    <a asp-area="Meetups" asp-page="/Create/CreateMeetupPage" asp-route-id="@Model.ClubDetails.ClubId" class="btn btn-dark text-success">Host Meetup</a>
                </div>
                <div class="col-3 mt-3">
                    @if (@Model.ClubDetails.UserMembership.Rank == MembershipRank.Leader)
                    {
                        <form method="post">
                            <input type="hidden" asp-for="@Model.ClubDetails.UserMembership.Rank" value="@Model.ClubDetails.UserMembership.Rank" />
                            <input type="hidden" asp-for="@Model.ClubDetails.ClubId" value="@Model.ClubDetails.ClubId" />
                            <button asp-page-handler="DeleteClub" type="submit" class="btn btn-dark text-danger">Delete Club</button>
                        </form>
                    }
                    else
                    {
                        <button asp-area="" asp-page="" asp-route-id="@Model.ClubDetails.ClubId" type="submit" class="btn btn-dark text-danger">Quit Club</button>
                    }
                </div>
            </div>

            @*Club Members*@
            <div class="sub-page">
            @if (Model.ClubDetails.ClubMembers.Any())
            {
                <div class="row text-center">
                    <div class="sub-page-title">Club Members:</div>
                </div>
                   
                <div class="row pt-3 pb-3">
                    <div class="col-4 column-header">User</div>
                    <div class="col-4 column-header">Rank</div>
                </div>

                @foreach (var m in Model.ClubDetails.ClubMembers)
                {
                    <div class="row mb-2 p-2">
                        <div class="col-4">
                            <div class="form-control column-readonly">@m.UserProfile.DisplayName</div>
                        </div>
                        <div class="col-4">
                            <div class="form-control column-readonly">@m.Rank.ToString() </div>
                        </div>
                        <div class="col-4">
                                
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="row text-center">
                    <div class="sub-page-title">No Club Members</div>
                </div>
            }
            </div>

            
            @if (Model.ClubDetails.UserMembership.Rank == MembershipRank.Leader)
            {
                @*Pending Members*@
                <div class="row">
                    @if (Model.ClubDetails.PendingMemberships.Any())
                    {
                        <div class="col-8 offset-2 sub-page">

                            <div class="row pb-4 text-center">
                                <div class="sub-page-title">Requests:</div>
                            </div>

                            @foreach (var m in Model.ClubDetails.PendingMemberships)
                            {
                                <div class="row mb-2 p-2 text-center">
                                    <div class="col-8">
                                        <div class="form-control column-readonly">@m.UserProfile.DisplayName</div>
                                    </div>
                                    <div class="col-2">

                                        <form method="post">
                                            <input type="hidden" asp-for="@Model.ClubDetails.UserMembership.Rank" value="@Model.ClubDetails.UserMembership.Rank" />
                                            <input type="hidden" asp-for="MembershipUserId" value="@m.UserProfile.Id" />
                                            <input type="hidden" asp-for="@Model.ClubDetails.ClubId" value="@Model.ClubDetails.ClubId" />
                                            <button asp-page-handler="AcceptMembership" type="submit" class="btn btn-outline-success">&#10004;</button>
                                        </form>
                                    </div>
                                    <div class="col-2">
                                        <button asp-area="" asp-page="" asp-route-id="@Model.ClubDetails.ClubId" type="submit" class="btn btn-outline-danger">&#10006;</button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }

        </div>

        <div class="col-7 offset-1">

            @*Next Meetup*@
            @if (@Model.ClubDetails.NextMeetup is not null)
            {
                <div class="row sub-page">

                    <div class="row">

                        <div class="col-5 text-center">
                            <div class="sub-page-title pb-3">Next Pick:</div>
                            <div>
                                <img class="movie-poster pt-3" src="@Model.ClubDetails.NextMeetup.Movie.PosterURL" />
                            </div>
                        
                        </div>

                        <div class="col-7">

                            <div class="row mt-3 text-center">
                                <div class="movie-title">@Model.ClubDetails.NextMeetup.Movie.Title (@Model.ClubDetails.NextMeetup.Movie.ReleaseDate.Year)</div>
                            </div>

                            <div class="row mb-4 text-center">
                                <h4 class="movie-tagline">" @Model.ClubDetails.NextMeetup.Movie.Tagline "</h4>
                            </div>

                            <div class="row m-3 text-center">
                                <h5 class="movie-genres">@Model.ClubDetails.NextMeetup.Movie.Genres</h5>
                            </div>

                            <div class="row m-3">
                                <p class="movie-synopsis">@Model.ClubDetails.NextMeetup.Movie.Synopsis</p>
                            </div>

                            <div class="row">

                                <div class="col-4 column-header">
                                    <div>Date: </div>
                                </div>

                                <div class="col-7">
                                    <div class="form-control column-readonly mt-2">@Model.ClubDetails.NextMeetup.Date </div>
                                </div>

                            </div>

                            <div class="row">

                                <div class="col-4 column-header">
                                    <div>Chosen By: </div>
                                </div>

                                <div class="col-7">
                                    <div class="form-control column-readonly mt-2">@Model.ClubDetails.NextMeetup.Host </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>
            }
            else
            {
                <div class="row sub-page text-center">
                    <div class="sub-page-title">No Upcoming Meetups</div>
                </div>
            }


            <div class="row mt-5 text-center">

                <div class="col-4 offset-2">
                    <a asp-area="Meetups" asp-page="/ClubMeetups/PreviousClubMeetupsPage" asp-route-id="@Model.ClubDetails.ClubId" class="btn btn-dark">&#8592; Previous Meetups</a>
                </div>

                <div class="col-4">
                    <a asp-area="Meetups" asp-page="/ClubMeetups/UpcomingClubMeetupsPage" asp-route-id="@Model.ClubDetails.ClubId" class="btn btn-dark">Upcoming Meetups &#8594;</a>
                </div>

            </div>


        </div>
    </div>
        break;
}