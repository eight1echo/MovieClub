@page "/clubs/search"
@model SearchClubsPage
@{
}

@if (Model.SearchedClubs is not null)
{
    <div class="row">
        <div class="col-6 offset-3 sub-page">

            <div class="row text-center">
                <div class="sub-page-title">Search Results: </div>
            </div>

            @if (Model.SearchedClubs.Any())
            {
                <div class="row pt-5 pb-3">
                    <div class="col-4 column-header">Club</div>
                    <div class="col-2 column-header">Members</div>
                    <div class="col-3 column-header">Leader</div>
                </div>

                @foreach (var club in Model.SearchedClubs) 
                {
                    <div class="row mb-2 p-2">
                        <div class="col-4">
                            <a asp-area="Clubs" asp-page="/Details/ClubDetailsPage" asp-route-id="@club.Id" class="form-control column-link">@club.Name</a>
                        </div>
                        <div class="col-2">
                            <input class="form-control text-center column-readonly" type="text" value="@club.Memberships.Count" readonly />
                        </div>
                        <div class="col-3">
                            <input class="form-control text-center column-readonly" type="text" value="@club.ClubLeader" readonly />
                        </div>
                        <div class="col-3">
                            <form method="post">
                                <input type="hidden" asp-for="ClubId" value="@club.Id" />
                                <input asp-page-handler="Join" type="submit" value="Apply To Join" class="btn btn-outline-success" />
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="row pt-5 pb-3">
                    <div class="column-header">No Results</div>
                    <div class="col-4 text-center pt-4 offset-4">
                        <a class="btn btn-dark text-success" asp-area="Clubs" asp-page="/Create/CreateClubPage">Create Club</a>
                    </div>
                </div>
            }
        </div>

    </div>
}