@page "/clubs/search"
@model SearchClubsPage
@{
}

<div class="row">
    @if (Model.SearchedClubs.Any())
    {
        <div class="col-6 offset-3 mt-3">

            <div class="row">
                <div class="col-3 offset-1 pt-1 sub-page-right-title text-center">Search Results :</div>
            </div>

            <div class="row">
                <div class="col-10 offset-1 sub-page-right-list p-2">
                    @foreach (var club in Model.SearchedClubs) 
                    {
                        <div class="row sub-page-right-item mt-3">
                            <div class="col-9 mt-1 text-center">
                                    <a asp-area="Clubs" asp-page="/Details/ClubDetailsPage" asp-route-id="@club.Id" class="sub-page-link">@club.Name</a>
                            </div>
                            <div class="col-3 text-center">
                                <form method="post">
                                    <input type="hidden" asp-for="ClubId" value="@club.Id" />
                                    <input asp-page-handler="Join" type="submit" value="Apply To Join" class="btn btn-outline-success" />
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    }
    else
    {
        <div class="row pt-5 pb-3">
            <div class="col-4 offset-4 ">
                <div class="row sub-page-right-item text-center">
                    <div class="sub-heading">No Results</div>
                </div>

                <div class="row">
                    <div class="col-4 text-center pt-4 offset-4">
                        <a class="btn btn-success" asp-area="Clubs" asp-page="/Create/CreateClubPage">Create A Club</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>