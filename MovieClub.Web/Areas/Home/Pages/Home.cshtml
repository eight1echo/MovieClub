@page "/"
@model HomePage
@{

}

<div class="row">

    @*Your Clubs*@
    <div class="col-3">

        @if (Model.Clubs is not null)
        {
            <div class="sub-page">
                @if (Model.Clubs.ClubsLeader.Any() || Model.Clubs.ClubsMember.Any() || Model.Clubs.ClubsPending.Any())
                {
                        <div class="row text-center">
                            <div class="col-8">
                                <div class="sub-page-title mt-3">Your Clubs:</div>
                            </div>
                            <div class="col-4">
                                <a class="btn btn-success" asp-area="Clubs" asp-page="/Create/CreateClubPage">New Club</a>
                            </div>
                        </div>

                        <div class="row pt-4">
                            <div class="col-5 offset-1 column-header">Club</div>
                            <div class="col-6 column-header text-end">Membership</div>
                        </div>

                        <hr />

                        @foreach (var club in Model.Clubs.ClubsLeader) 
                        {
                            <div class="row text-center mb-2">
                                <div class="col-7">
                                    <a asp-area="Clubs" asp-page="/Details/ClubDetailsPage" asp-route-id="@club.Id" class="form-control column-link">@club.Name</a>
                                </div>
                                <div class="col-3">
                                    <div class="form-control column-readonly">@club.UserRank </div>
                                </div>
                            </div>
                        }

                        @foreach (var club in Model.Clubs.ClubsMember) 
                        {
                            <div class="row text-center mb-2">
                                <div class="col-7">
                                    <a asp-area="Clubs" asp-page="Details/ClubDetailsPage" asp-route-id="@club.Id" class="form-control column-link">@club.Name</a>
                                </div>
                                <div class="col-3">
                                    <div class="form-control column-readonly">@club.UserRank </div>
                                </div>
                                <div class="col-1">
                                    <form method="post">
                                        <input type="hidden" asp-for="ClubId" value="@club.Id" />
                                        <input asp-page-handler="Cancel" type="submit" value="Quit" class="btn btn-dark text-danger" />
                                    </form>
                                </div>
                            </div>
                        }

                        @foreach (var club in Model.Clubs.ClubsPending) 
                        {
                            <div class="row text-center mb-2">
                                <div class="col-7">
                                    <a asp-area="Clubs" asp-page="Details/ClubDetailsPage" asp-route-id="@club.Id" class="form-control column-link">@club.Name</a>
                                </div>
                                <div class="col-3">
                                    <div class="form-control column-readonly">@club.UserRank </div>
                                </div>
                                <div class="col-1">
                                    <form method="post">
                                        <input type="hidden" asp-for="ClubId" value="@club.Id" />
                                        <input asp-page-handler="Cancel" type="submit" value="Cancel" class="btn btn-dark text-danger" />
                                    </form>
                                </div>
                            </div>
                        }
                }
                else
                {
                    <div class="row text-center">
                         <div class="sub-page-title">No Clubs</div>
                         <div class="col-4 pt-4 offset-4">
                            <a class="btn btn-dark text-success" asp-area="Clubs" asp-page="/Create/CreateClubPage">Create Club</a>
                         </div>
                    </div>
                }
            </div>
        }

    </div>

    @*Upcoming Meetups*@
    <div class="col-8 offset-1">

        @if (Model.Meetups is not null)
        {
            @if (Model.Meetups.UpcomingMeetups.Any())
            {
                <div class="sub-page">
                    <div class="row text-center">
                        <div class="col-9 sub-page-title mt-3">Upcoming Meetups:</div>

                        <div class="col-3 text-end">
                            <a asp-area="Meetups" asp-page="/Create/CreateMeetupPage" class="btn btn-success">New Meetup</a>
                        </div>
                    </div>

                    <div class="row pt-5">
                        <div class="col-4 column-header">Club</div>
                        <div class="col-2 column-header">Date</div>
                        <div class="col-2 column-header">Host</div>
                        <div class="col-4 column-header">Movie</div>
                    </div>

                    <hr />

                    @foreach (var m in Model.Meetups.UpcomingMeetups)
                    {
                        <div class="row mb-2 p-2">
                            <div class="col-4">
                                <a asp-area="Clubs" asp-page="/Details/ClubDetailsPage" asp-route-id="@m.Club.Id" class="form-control column-link">@m.Club.Name</a>
                            </div>
                            <div class="col-2">
                                <div class="form-control column-readonly">@m.Date.ToShortDateString() </div>
                            </div>
                            <div class="col-2">
                                <div class="form-control column-readonly">@m.Host </div>
                            </div>
                            <div class="col-4">
                                <a asp-area="Movies" asp-page="/Details/MovieDetailsPage" asp-route-id="@m.Movie.Id" class="form-control column-link">@m.Movie.Title</a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row sub-page text-center">
                    <div class="sub-page-title">No Upcoming Meetups</div>
                </div>
            }
        }
    </div>

</div>