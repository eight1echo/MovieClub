@page
@model UpcomingClubMeetupsPage
@{
}

<div class="row">

    <div class="col-4">
        <div class="row pt-5 text-center">
            <div class="page-title">
                @Model.ClubMeetups!.ClubName
            </div>
        </div>
    </div>

    <div class="col-7 offset-1">

        @if (Model.ClubMeetups.Meetups.Any())
        {
            <div class="sub-page">
                <div class="row text-center">
                    <div class="sub-page-title">Upcoming Meetups</div>
                </div>

                <div class="row pt-5">
                    <div class="col-4 column-header">Date</div>
                    <div class="col-3 column-header">Chosen By</div>
                    <div class="col-5 column-header">Movie</div>
                </div>

                <hr />

                @foreach (var m in Model.ClubMeetups.Meetups)
                {
                    <div class="row mb-2 p-2">
                        <div class="col-4">
                            <div class="form-control column-readonly">@m.Date.ToShortDateString() </div>
                        </div>
                        <div class="col-3">
                            <div class="form-control column-readonly">@m.Host </div>
                        </div>
                        <div class="col-5">
                            <a asp-area="Movies" asp-page="/Details/MovieDetailsPage" asp-route-id="@m.Movie.Id" class="form-control column-link">@m.Movie.Title</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row sub-page text-center">
                <div class="sub-page-title">No Upcoming Meetups</div>
            </div>
        }

        <div class="row mt-5 text-center">

            <div class="col-4 offset-2">
                <a asp-area="Meetups" asp-page="/ClubMeetups/PreviousClubMeetupsPage" asp-route-id="@Model.ClubMeetups.ClubId" class="btn btn-dark">&#8592; Previous Meetups</a>
            </div>

            <div class="col-4">
                <a asp-area="Meetups" asp-page="/ClubMeetups/UpcomingClubMeetupsPage" asp-route-id="@Model.ClubMeetups.ClubId" class="btn btn-dark">Upcoming Meetups &#8594;</a>
            </div>

        </div>

    </div>

</div>