<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Club</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieClub.Web.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container navigation">
                <a class="navbar-title" asp-page="/Index">MOVIE CLUB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                        <li class="nav-item nav-search text-center">
                            <form class="row" method="post"
                                asp-area="Clubs" asp-page="/Search/SearchClubsPage" asp-page-handler="Search" asp-route-value="value">
                                <div class="col-10">
                                    <input type="text" class="form-control user-input" placeholder="Search Clubs" name="value" maxlength="22"/>              
                                </div>
                                <div class="col-2">
                                    <button  type="submit" class="invisible">Search</button>
                                </div>
                            </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-1">
                    &copy; 2022 - eight1echo
                </div>
                <div class="col-6 offset-5">
                    <div class="row">
                        <div class="col-3 offset-6 text-end">
                            <div style="font-size: 12px">Movie Data Provided by </div>
                        </div>
                        <div class="col-3">
                            <img class="logo-tmdb" src="~/images/tmdb.svg" />
                        </div>
                    </div>                    
                </div>
            </div>                        
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>